@model IEnumerable<Login.Models.UsuarioCE>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <html>
    <head>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
        <link href="~/Content/css/tareas.css" rel="stylesheet" />
    </head>
    <body>


        <div class="container">
            <div class="row">



                <div class="col-md-10 col-md-offset-1">

                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">Tareas</h3>
                                </div>

                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>
                                    <tr>

                                        <th><em class="fa fa-cog"></em></th>
                                        <th>Correo</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>




                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td align="center">
                                                <em class="bg-transparent btn btn-sm btn-light fa fa-trash"> @Html.ActionLink("Eliminar", "EliminarUsuario", new { id = item.Id }, new { @class = "aElimina" })</em>
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Correo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellido)
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>



    </body>
</html>
}
@section scripts{


    <script>
        $(document).ready(function () {
            $(".aElimina").click(function (event) {
                if (!confirm("¿Estás seguro que deseas eliminar?")) {
                    event.preventDefault();
                }
            });
        });
    </script>

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-success">@ViewBag.Mensaje</div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }



}
